@page
@model gui.Pages.SectionTemplates.SectionTemplateCreateModel

@addTagHelper *, gui

<h1>Add New Section template</h1>

<form method="post">
    <label-and-input asp-for="NewItem.Title"></label-and-input>
    <label-and-input asp-for="NewItem.Description"></label-and-input>

    <h4>Questions</h4>

    <!-- Dynamic Question fields -->
    <dynamic-fields-group id="Questions" attributes="Title:text,Description:text" asp-for="NewItem.Questions"></dynamic-fields-group>

    <!-- "Add Question" Button -->
    <dynamic-fields-add-button bind-to="Questions">Add Questions</dynamic-fields-add-button>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
 <dynamic-fields-script bind-to="Questions" items-definition="Title:text,Description:text" /> 


