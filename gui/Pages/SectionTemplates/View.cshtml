@page "{Id}"
@model gui.Pages.SectionTemplates.SectionTemplateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Section Template Details</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <td>@Model.Item.Id</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>@Model.Item.Owner</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>@Model.Item.Title</td>
            </tr>
            <tr>
                <th>HelpText</th>
                <td>@Model.Item.HelpText</td>
            </tr>
            <tr>
                <th>Who</th>
                <td>@Model.Item.Who</td>
            </tr>
        </table>
    </div>
</div>

<h3>Questions</h3>
@if (Model.Item.Questions != null && Model.Item.Questions.Count > 0)
{
    <ul>
        @foreach (var template in Model.Item.Questions)
        {
            <li>@template.Title</li>
        }
    </ul>
}
else
{
    <p>No Questions Yet.</p>
}

<a class="btn btn-primary" asp-page="/SectionTemplates/Index">Back to Section Templates List</a>
