@page
@model gui.Pages.Applications.ApplicationsIndexModel

<h1>Section Templates</h1>

<a class="btn btn-primary" href="/SectionTemplates/Create">Add New Application</a>
<table class="table">
    <thead>
        <tr>
            <th>Job</th>
            <th>Candidate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.JobId</td>
                <td>@item.Candidate</td>

                <td><a href="/Applications/View/@item.Id">View</a></td>
                <td><a href="/Applications/Edit/@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
