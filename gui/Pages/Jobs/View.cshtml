@page "{Id}"
@model gui.Pages.Jobs.JobViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Job Details</h2>

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <td>@Model.Job.Id</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>@Model.Job.Title</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>@Model.Job.Description</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>@Model.Job.Owner</td>
            </tr>
        </table>
    </div>
</div>

<h3>Job Section Templates</h3>
@if (Model.Job.JobSectionTemplates != null && Model.Job.JobSectionTemplates.Count > 0)
{
    <ul>
        @foreach (var template in Model.Job.JobSectionTemplates)
        {
            <li>@template.SectionTemplate.Title</li>
        }
    </ul>
}
else
{
    <p>No job section templates available for this job.</p>
}

<a class="btn btn-primary" asp-page="/Jobs/Index">Back to Jobs List</a>
